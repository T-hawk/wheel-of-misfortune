<div class="text-left m-4">
    <h1>Winner:</h1>
    <div class="bg-primary p-4 m-2 rounded">
        <h3><%= @winner["name"] %></h3>
        <h4>Members:</h4>
        <ul>
            <% @winner["members"].each do |member| %>
                <li><%= member %></li>
            <% end %>
        </ul>
        <h4>Score: <%= @winner["score"] %></h4>
    </div>
    <h1>Runners Up:</h1>
    <div class="d-flex flex-wrap">
        <% @teams.each do |team| %>
            <div class="bg-secondary rounded p-3 m-2">
                <h4><%= team["name"] %></h4>
                <h5>Members:</h5>
                <ul>
                    <% team["members"].each do |member| %>
                        <li><%= member %></li>
                    <% end %>
                </ul>
                <h4>Score: <%= team["score"] %></h4>
            </div>
        <% end %>
    </div>
</div>
